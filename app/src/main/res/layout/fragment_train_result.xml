<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.leven.booguubalancescale.train.fragment.TrainResultFragment">

    <ImageButton
        android:id="@+id/btn_train_result_back_home"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@mipmap/home" />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:layout_below="@+id/btn_train_result_back_home"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        >

        <com.leven.booguubalancescale.train.view.BallView
            android:id="@+id/ballView_train_result"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            app:srcCompat="@mipmap/result_background" />

    </FrameLayout>


</RelativeLayout>
