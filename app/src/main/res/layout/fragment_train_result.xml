<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.leven.booguubalancescale.train.fragment.TrainResultFragment">

    <ImageButton
        android:id="@+id/btn_train_result_back_home"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/app_name"
        app:srcCompat="@mipmap/home" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btn_train_result_back_home"
        android:background="@color/main_background_color">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="170dp"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/frameLayout"
                android:layout_width="320dp"
                android:layout_height="320dp"
                android:layout_gravity="center">

                <com.leven.booguubalancescale.train.view.BallView
                    android:id="@+id/ballView_train_result"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:contentDescription="@string/app_name"
                    android:scaleType="centerCrop"
                    app:srcCompat="@mipmap/result_background" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_marginTop="20dp">

                            <com.github.mikephil.charting.charts.PieChart
                                android:id="@+id/pie_train_result_instability"
                                android:layout_width="150dp"
                                android:layout_height="150dp" />

                            <TextView
                                android:id="@+id/textView4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="@string/result_pie_instability"
                                android:textColor="@color/result_title"
                                android:textSize="@dimen/result_title"
                                android:layout_marginTop="15dp"/>

                            <TextView
                                android:id="@+id/textView7"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="60dp"
                                android:gravity="center"
                                android:text="@string/result_desc_instability"
                                android:textColor="@color/result_content" />
                        </FrameLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="10dp">

                            <com.github.mikephil.charting.charts.PieChart
                                android:id="@+id/pie_train_result_direction"
                                android:layout_width="150dp"
                                android:layout_height="150dp" />

                            <TextView
                                android:id="@+id/textView5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="@string/result_pie_direction"
                                android:textColor="@color/result_title"
                                android:layout_marginTop="15dp"
                                android:textSize="@dimen/result_title" />

                            <TextView
                                android:id="@+id/textView8"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="60dp"
                                android:gravity="center"
                                android:text="@string/result_desc_direction"
                                android:textColor="@color/result_content" />
                        </FrameLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <com.github.mikephil.charting.charts.PieChart
                            android:id="@+id/pie_train_result_falling"
                            android:layout_width="300dp"
                            android:layout_height="300dp"
                            android:layout_gravity="center" />

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/result_pie_falling"
                            android:textColor="@color/result_title"
                            android:textSize="@dimen/result_title"/>

                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="35dp"
                            android:gravity="center"
                            android:text="@string/result_desc_falling"
                            android:textColor="@color/result_content" />

                        <Button
                            android:id="@+id/btn_train_result_tast_again"
                            android:layout_width="150dp"
                            android:layout_marginBottom="30dp"
                            android:layout_gravity="bottom|center"
                            android:text="@string/btn_result_again"
                            android:layout_height="wrap_content"
                            android:background="@drawable/shape"
                            android:textAllCaps="false"
                            />
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
